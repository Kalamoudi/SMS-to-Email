<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:textColor="?android:textColorPrimary"

    >
    <!-- Placeholder for ad (advertisement) -->
    <include
        android:id="@+id/adViewInViewMessages"
        layout="@layout/small_advertisement"
        />

    <TextView
        android:id="@+id/textInViewMessages"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/adViewInViewMessages"
        android:text="@string/view_messages_header_text"
        android:textSize="16sp"
        android:textColor="?attr/textColorPrimary"
        android:layout_marginTop="20dp"

        />

    <include
        android:id="@+id/smsRecyclerViewInViewMessages"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInViewMessages"
        layout="@layout/messages_view"
        />



</RelativeLayout>
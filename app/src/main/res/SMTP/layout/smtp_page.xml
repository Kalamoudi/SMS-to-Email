<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:textColor="?android:textColorPrimary"

    >

    <!-- Placeholder for ad (advertisement) -->
    <RelativeLayout
        android:id="@+id/adViewInSmtpLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
    <include
        android:id="@+id/adViewInSmtp"
        layout="@layout/ad_smtp_banner"
        />

    </RelativeLayout>


   <TextView
       android:layout_width="match_parent"
       android:layout_height="30dp"
       android:gravity="center"
       android:layout_centerHorizontal="true"
       android:layout_below="@id/adViewInSmtpLayout"
       android:layout_marginTop="16dp"
       android:text="@string/smtp_text_view"
       android:textColor="?android:textColorPrimary"
       android:textSize="20sp"

       />
    <include

        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/smtpForm"
        layout="@layout/smtp_form"
        />

</RelativeLayout>
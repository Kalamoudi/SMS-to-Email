<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen

    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <PreferenceCategory


        >


        <!-- Include other preferences inside this category -->
        <CheckBoxPreference
            android:key="example_checkbox"
            android:title="Example Checkbox"
            android:summary="This is an example checkbox preference"
            android:layout="@layout/checkbox1"
            android:defaultValue="false"


            />

        <SwitchPreference
            android:id="@+id/settingsThemeSwitch"
            android:key="settingsThemeSwitch"
            android:title="Dark Theme"
            android:summary="Changes the theme from light to dark"
            android:layout="@layout/switch1"
            android:defaultValue="?attr/settingsThemeSwitchIndicator"

            />

    </PreferenceCategory>


</PreferenceScreen>
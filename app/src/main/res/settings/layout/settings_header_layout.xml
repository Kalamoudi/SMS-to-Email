<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    >

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/settingsBackButtonView"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"

        >

        <Button
            android:id="@+id/settingsBackButton"
            android:contentDescription="@string/closeSettings"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"

            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/arrow_back_40px"

            android:gravity="left"

            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"

            android:visibility="visible"
            tools:visibility="visible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/settingsToolbarHeaderText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingLeft="10dp"


        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:text="@string/settingsToolbarHeaderText"
        android:textSize="20sp"
        android:textColor="?attr/textHeaderColorPrimary"

        tools:visibility="visible"
        />



<!--    <include layout="@layout/settings_button"-->
<!--        android:id="@+id/settingsButton"-->
<!--        />-->



    <!-- Placeholder View to emulate left padding on the button in order for the 2 buttons to look
            symmetrical -->


    <View

        android:id="@+id/headerLayoutEmptyView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"

        />





</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    >

    <Button
        android:id="@+id/menuButton"
        android:contentDescription="@string/menu_button"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"

        android:layout_marginTop="14dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/menu_48px"

        android:layout_centerVertical="true"

        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/toolbarHeaderText"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/toolbar_header_text"
        android:textSize="18sp"
        android:textColor="?attr/textHeaderColorPrimary"

        tools:visibility="visible"
        />



<!--    <include layout="@layout/settings_button"-->
<!--        android:id="@+id/settingsButton"-->
<!--        />-->



    <!-- Placeholder View to emulate left padding on the button in order for the 2 buttons to look
            symmetrical -->


    <View

        android:id="@+id/headerLayoutEmptyView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"

        />



    <include
        android:id="@+id/googleSignInButton"
        layout="@layout/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"

        android:layout_alignEnd="@id/headerLayoutEmptyView"
        android:layout_centerVertical="true"

        />


</RelativeLayout>

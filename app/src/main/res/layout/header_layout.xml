<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/instructionsTextView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="false"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="SMS to Email"
        android:textSize="18sp"
        android:textColor="?attr/textHeaderColorPrimary"

        tools:visibility="visible"
        />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/menu_48px"

        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/toggleThemeButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="318dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/settings_48px"

        android:visibility="visible"
        tools:visibility="visible" />


</RelativeLayout>
